Public Sub CalcFinalFileSize()

  Dim iFileSize As Single

  ' Video size only (MB)
  iVideoSize = (txtBitrate.Value * iLength * 1000) / cMB

  ' Final file size (MB)
  iFileSize = iVideoSize + iAudioSize
  txtFinalSize.Value = IIf(iFileSize > 0, Round(iFileSize, 0), 0.01)

End

