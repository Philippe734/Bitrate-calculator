' Gambas class file

Public Sub Form_Open()
  
  Dim sMsg As String
  
  sMsg = "Thank you for using this program. It's a bitrate calculator... what else... written in Visual Basic Gambas for Linux."
  
  Me.Title = "About me"
  
  txtAbout.Text = smsg
  
  lblAppVersion.Text = Application.Title & " " & Application.Version & " for Linux"
  lblAuthor.Text = "Free open source GNU/GPL" & Chr$(10) & "by Philippe734 @ 2016"
  
  cmdWebSite.ToolTip = "https://github.com/Philippe734/Bitrate-calculator"
  
  cmdWebSite.SetFocus
  
End

Public Sub cmdOK_Click()  
  
  Me.Close  
  
End

Public Sub cmdWebSite_Click()

  Dim sRet As String
  Shell "xdg-open '" & cmdWebSite.ToolTip & "'" To sRet
  
End

